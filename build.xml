<?xml version="1.0" encoding="UTF-8"?>

<project name="Imgzoom" default="help">

    <fileset id="php-sources" dir=".">
        <include name="classes/*.php"/>
        <include name="index.php"/>
    </fileset>

    <fileset id="unit-tests" dir="tests/unit">
        <include name="*Test.php"/>
    </fileset>

    <target name="help" description="lists available targets">
        <exec command="phing -l" outputProperty="help"/>
        <echo>${help}</echo>
    </target>

    <target name="sniff">
        <phpcodesniffer standard="PEAR" format="full">
            <fileset refid="php-sources"/>
            <fileset refid="unit-tests"/>
            <!--<fileset refid="attack-tests"/>-->
        </phpcodesniffer>
    </target>

    <target name="compat">
        <exec command="phpcompatinfo --configuration phpcompatinfo.xml print
                                     --exclude-pattern imgzoom ."
              logoutput="true"/>
    </target>

    <target name="unit-tests">
        <phpunit haltonerror="true" haltonfailure="true">
            <formatter type="plain" usefile="false"/>
            <batchtest>
                <fileset refid="unit-tests"/>
            </batchtest>
        </phpunit>
    </target>

    <target name="coverage">
        <exec command="phpunit --configuration coverage.xml" logoutput="true"/>
    </target>

    <target name="php-doc">
        <phpdoc title="Imgzoom_XH Developer Documentation" destdir="doc/php"
                output="HTML:Smarty:HandS" defaultpackagename="Imgzoom"
                defaultcategoryname="CMSimple_XH">
            <fileset refid="php-sources"/>
            <projdocfileset dir=".">
               <include name="README"/>
               <include name="CHANGELOG"/>
            </projdocfileset>
        </phpdoc>
    </target>

    <target name="doc" depends="php-doc"/>

    <target name="build">
        <fail unless="version" message="version is not defined!"/>
        <svnexport revision="" repositoryurl="." todir="export"/>
        <move todir="dist">
            <fileset dir="export">
                <include name="index.php"/>
                <include name="version.nfo"/>
            </fileset>
            <filterchain>
                <replacetokens>
                    <token key="IMGZOOM_VERSION" value="${version}"/>
                </replacetokens>
            </filterchain>
        </move>
        <jsMin targetDir="dist" suffix="" failOnError="false">
            <fileset dir="export">
                <include name="imgzoom.js"/>
            </fileset>
        </jsMin>
        <move todir="dist">
            <fileset dir="export">
                <exclude name="tests/**"/>
                <exclude name="build.xml"/>
                <exclude name="composer.*"/>
                <exclude name="coverage.xml"/>
                <exclude name="imgzoom.js"/>
                <exclude name="phpcompatinfo.xml"/>
            </fileset>
        </move>
        <delete dir="export"/>
        <copy file="dist/languages/en.php" tofile="dist/languages/default.php"/>
        <zip destfile="Imgzoom_XH-${version}.zip" basedir="dist" prefix="imgzoom/"/>
        <delete dir="dist"/>
    </target>

</project>
